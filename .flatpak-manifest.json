{
    "id": "org.kde.plasma.keyboard",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.10",
    "sdk": "org.kde.Sdk",
    "command": "plasma-keyboard",
    "tags": [
        "nightly"
    ],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--share=ipc",
        "--device=dri",
        "--socket=wayland",
        "--socket=inherit-wayland-socket",
        "--env=QML2_IMPORT_PATH=/app/qml:/app/lib/qml:/app/lib64/qml",
        "--env=QT_PLUGIN_PATH=/app/plugins:/app/lib64/plugins:/app/lib/plugins:/usr/share/runtime/lib/plugins"
    ],
    "modules": [
        {
            "name": "qt6-virtualkeyboard",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DQT_DISABLE_RPATH=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.qt.io/official_releases/qt/6.10/6.10.1/submodules/qtvirtualkeyboard-everywhere-src-6.10.1.tar.xz",
                    "sha256": "5b9cde3188afbc01b602b9016cee95ccd536aea43a6e6cfd297b44f328b9b6df",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 7927,
                        "stable-only": true,
                        "url-template": "https://download.qt.io/official_releases/qt/${major}.${minor}/$version/submodules/qtvirtualkeyboard-everywhere-src-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "layer-shell-qt",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DBUILD_TESTING=OFF",
                "-DBUILD_QML=ON"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/plasma/layer-shell-qt.git",
                    "branch": "v6.5.3"
                }
            ]
        },
        {
            "name": "plasma-keyboard",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}
